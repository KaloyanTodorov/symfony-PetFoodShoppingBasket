{% extends '::base.html.twig' %}


{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <form action="{{ path('user_login') }}" method="POST">
        <div class="form-group col-md-4 col-md-offset-4">

            <label for="username" class="cols-sm-4 control-label">Username</label>
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />

            <label for="password" class="cols-sm-4 control-label">Password</label>
            <input type="password" class="form-control" id="password" name="_password" />


            <button type="submit" class="btn-default btn btn-sm login-button col-md-4 col-md-offset-1">Login</button>

            <a href=" {{ path('user_register') }}" class="btn-default btn btn-sm col-md-4 col-md-offset-1">Register</a><br/>
        </div>
    </form>


{% endblock %}